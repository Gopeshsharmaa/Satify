<% layout("/layouts/boilerplate") %>
<body>
<br>
<br>
<br>
<form action="/signup" method="POST" class="p-4 shadow-lg rounded bg-white" style="max-width: 600px; margin: auto;">

  <h2 class="text-center fw-bold mb-4">Create an Account</h2>

  <!-- USERNAME -->
  <div class="form-group mb-3">
    <label class="fw-bold">Username</label>
    <input 
      type="text" 
      class="form-control" 
      name="username" 
      placeholder="Enter username"
      required
    >
  </div>

  <!-- EMAIL -->
  <div class="form-group mb-3">
    <label class="fw-bold">Email</label>
    <input 
      type="email" 
      class="form-control" 
      name="email" 
      placeholder="Enter email"
      required
    >
  </div>

  <!-- PASSWORD -->
  <div class="form-group mb-3">
    <label class="fw-bold">Password</label>
    <input 
      type="password" 
      class="form-control" 
      name="password" 
      placeholder="Enter password"
      required
    >
  </div>

  <!-- SUBMIT BUTTON -->
  <button 
    type="submit" 
    class="btn btn-dark w-100 py-2 mt-3"
    style="font-size: 1.1rem;"
  >
    Sign Up
  </button>

</form>

</body>
</html>
