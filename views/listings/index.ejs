<% layout("/layouts/boilerplate")%>
<body>

    <!-- Icon Navigation Section -->
    <div class="top-bar">
    <div class="icon-nav">
        <div class="icon-item"><i class="fa-solid fa-fire"></i><span>Trending</span></div>
        <div class="icon-item"><i class="fa-solid fa-house"></i><span>Rooms</span></div>
        <div class="icon-item"><i class="fa-solid fa-mountain"></i><span>Mountains</span></div>
        <div class="icon-item"><i class="fa-solid fa-sun"></i><span>Desert</span></div>
        <div class="icon-item"><i class="fa-solid fa-water"></i><span>Beach</span></div>
        <div class="icon-item"><i class="fa-solid fa-city"></i><span>Cities</span></div>
        <div class="icon-item"><i class="fa-solid fa-snowflake"></i><span>Snow</span></div>
        <div class="icon-item"><i class="fa-solid fa-umbrella-beach"></i><span>Beach</span></div>
    </div>

    <div class="switch-container-inline">
        <label class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
            <span class="switch-label">Include Taxes</span>
        </label>
    </div>
</div>
    <div class="listing-container">
        <% for (let listing of alllistings) { %>
        <div class="listing-card">
            <div class="listing-image-wrapper">
                <img src="<%= listing.image %>" alt="Listing Image" class="listing-image">
            </div>

            <div class="listing-content">
                <h5 class="listing-title"><%= listing.title %></h5>

                <p class="listing-price" data-base-price="<%= listing.price %>">₹ <%= Number(listing.price).toLocaleString("en-IN") %></p>

                <a href="/listings/<%= listing.id %>" class="listing-btn">View More</a>
            </div>
        </div>
        <% } %>
    </div>

<style>
    .icon-nav {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 1.5rem;
        padding: 1rem 0;
        width: 100%;
    }
    .icon-nav::-webkit-scrollbar {
        display: none;
    }
    .icon-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        padding: 0.5rem 0.6rem;
        border-radius: 0.8rem;
        transition: 0.25s ease-in-out;
        min-width: 65px;
    }
    .icon-item i {
        font-size: 1.1rem;
        margin-bottom: 0.3rem;
        color: #444;
    }
    .icon-item span {
        font-size: 0.9rem;
        color: #555;
        font-weight: 500;
    }
    .icon-item:hover {
        background: #f1f1f1;
        transform: translateY(-4px);
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    }

    .listing-container {
        margin-top: 1rem;
    }
.search-box {
        width: 90%;
        max-width: 500px;
        margin: 1rem auto;
        position: relative;
    }
    .search-input {
        width: 100%;
        padding: 0.7rem 1rem 0.7rem 2.5rem;
        border-radius: 1.2rem;
        border: 1px solid #ccc;
        font-size: 1rem;
        transition: 0.2s ease;
    }
    .search-input:focus {
        outline: none;
        border-color: #555;
        box-shadow: 0px 3px 10px rgba(0,0,0,0.1);
    }
    .search-icon {
        position: absolute;
        top: 50%;
        left: 12px;
        transform: translateY(-50%);
        color: #555;
        font-size: 1rem;
    }

.switch-container {
        width: 90%;
        max-width: 500px;
        margin: 1rem auto;
        display: flex;
        align-items: center;
        justify-content: flex-start;
    }
    .switch-label {
        margin-left: 0.5rem;
        font-size: 1rem;
        color: #444;
        font-weight: 500;
    }

.top-bar {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    padding: 1rem;
    flex-wrap: nowrap;
}
.search-box-inline {
    position: relative;
    width: 260px;
}
.switch-container-inline {
    display: flex;
    align-items: center;
}
</style>

<script>
    const switchInput = document.getElementById('flexSwitchCheckDefault');

    switchInput.addEventListener('change', () => {
        const priceElements = document.querySelectorAll('.listing-price');

        priceElements.forEach(el => {
            const basePrice = parseFloat(el.getAttribute('data-base-price'));
            if (!isNaN(basePrice)) {
                if (switchInput.checked) {
                    const newPrice = Math.round(basePrice * 1.18);
                    el.innerText = `₹ ${newPrice.toLocaleString('en-IN')} (incl. tax)`;
                } else {
                    el.innerText = `₹ ${basePrice.toLocaleString('en-IN')}`;
                }
            }
        });
    });
</script>

</body>
</html>
